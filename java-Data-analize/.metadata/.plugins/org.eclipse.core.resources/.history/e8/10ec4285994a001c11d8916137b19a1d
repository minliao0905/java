package com.hyr.kmeans;

import java.awt.Color;

import java.awt.Dimension;

import java.awt.Graphics;

import java.awt.Graphics2D;

import java.util.Random;

import javax.swing.JFrame;

import javax.swing.JPanel;

public class MakeDraw {
		
	public static void makeDraw(String name,int[][] Drawpoints) {
		
		Draw dr = new Draw(Drawpoints);

		JFrame frame = new JFrame(name);

		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		frame.add(dr);

		frame.setSize(500, 500);

		frame.setLocationRelativeTo(null);

		frame.setVisible(true);

	}

	
}
class Draw extends JPanel {
	static int[][] Drawpoints ;
	
	public Draw(int[][] points) {
		Drawpoints = points;
	}
	public static int[][] getDrawpoints() {
		return Drawpoints;
	}

	public static void setDrawpoints(int[][] drawpoints) {
		Drawpoints = drawpoints;
	}
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		Graphics2D g2d = (Graphics2D) g;

		g2d.setColor(Color.red);// 设置画笔颜色
		Dimension size = getSize();
		int w = size.width;
		int h = size.height;
		for (int i = 0; i <= Drawpoints.length; i++) {
			int x = Drawpoints[i][0];
			int y = Drawpoints[i][1];			
			g2d.drawRect(x, y, 2, 2); // 参数 x,y为起始坐标，rw,rw为边长
		}
	}

}